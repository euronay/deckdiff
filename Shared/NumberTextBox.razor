<div class="relative flex items-stretch w-full">
    <div class="flex -mr-px">
        <button class="flex items-center leading-normal bg-grey-lighter rounded rounded-r-none border border-r-0 border-grey-light px-3 whitespace-no-wrap text-grey-dark text-sm" 
                @onclick="e => Number--">
            <span class="fa fa-minus"></span>
        </button>
    </div>
    <input type="text" class="flex-shrink flex-grow flex-auto leading-normal w-px flex-1 border h-10 border-grey-light px-3 relative text-black text-center" id="@Id" bind=@Number />
    <div class="flex -mr-px">
        <button class="flex items-center leading-normal bg-grey-lighter rounded rounded-l-none border border-l-0 border-grey-light px-3 whitespace-no-wrap text-grey-dark text-sm" 
                @onclick="e => Number++">
            <span class="fa fa-plus"></span>
        </button>
    </div>
</div>

@functions {

    [Parameter]
    public string Id {get; set;}

    [Parameter]
    public int Number {get; set; } = 0;

}